<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" x:Class="KinectSamples.MainWindow"
        Title="MainWindow" Height="700" Width="1050" Closing="Window_Closing" Loaded="Window_Loaded">

    <Grid Name="layoutGrid">
        <WpfViewers:KinectSkeletonChooser Name="kinectSensorChooser" HorizontalAlignment="Left" Height="30" Margin="424,60,0,0" VerticalAlignment="Top" Width="190" BorderBrush="Purple" BorderThickness="1"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="385" Margin="426,136,0,0" Stroke="Black" VerticalAlignment="Top" Width="203" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.328"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</Window>
